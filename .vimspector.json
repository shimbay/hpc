{
  "adapters": {
    "cpptools-remote": {
      "command": [
        "${gadgetDir}/vscode-cpptools/debugAdapters/bin/OpenDebugAD7"
      ],
      "name": "cppdbg",
      "configuration": {
        "type": "cppdbg"
      },
      "launch": {
        "remote": {
          "host": "debug",
          "runCommand": [
            "gdbserver",
            "--once",
            "--no-startup-with-shell",
            "0.0.0.0:${port}",
            "%CMD%"
          ]
        }
      },
      "attach": {
        "remote": {
          "host": "debug",
          "pidCommand": [
            "pgrep",
            "HPC"
          ],
          "attachCommand": [
            "gdbserver",
            "--once",
            "--attach",
            "0.0.0.0:${port}",
            "%PID%"
          ],
          "initCompleteCommand": [
            "kill",
            "-TRAP",
            "%PID%"
          ]
        }
      }
    }
  },
  "configurations": {
    "C/C++": {
      "adapter": "vscode-cpptools",
      "configuration": {
        "request": "launch",
        "type": "cppdbg",
        "cwd": "${workspaceRoot}",
        "program": "${workspaceRoot}/build/target",
        "args": [],
        "environment": [],
        "stopAtEntry": true,
        "externalConsole": true,
        "MIMode": "gdb",
        "breakpointers": {
          "exception": {
            "cpp_throw": "Y",
            "cpp_catch": "N"
          }
        },
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ]
      }
    },
    "C/C++ Remote Launch": {
      "adapter": "cpptools-remote",
      "remote-cmdLine": [ "/home/sunyunbo/workspace/src/hpc/build/benchmark/HPC_benchmark"],
      "remote-request": "launch",
      "configuration": {
        "request": "attach",
        "program": "${workspaceRoot}/build/benchmark/HPC_benchmark",
        "MIMode": "gdb",
        "miDebuggerAddress": "dev:${port}"
      }
    },
    "Python": {
      "adapter": "debugpy",
      "configuration": {
        "request": "launch",
        "type": "python",
        "cwd": "${workspaceRoot}",
        "program": "${workspaceRoot}/main.py",
        "args": [],
        "environment": [],
        "stopOnEntry": true,
        "console": "integratedTerminal"
      },
      "breakpoints": {
        "exception": {
          "raised": "N",
          "uncaught": "",
          "userUnhandled": ""
        }
      }
    }
  }
}
